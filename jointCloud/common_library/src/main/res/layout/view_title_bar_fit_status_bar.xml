<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/title_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxWidth="@dimen/normal_500dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"
        tools:text="时光胶囊哈哈哈哈哈哈哈哈" />

    <ImageButton
        android:id="@+id/leftImage"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_arrow_left"
        android:visibility="visible" />

    <TextView
        android:id="@+id/leftText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="@dimen/normal_32dp"
        android:paddingRight="@dimen/normal_32dp"
        android:textColor="@color/white"
        android:textSize="@dimen/title_button_text_size"
        android:visibility="gone"
        tools:text="哈哈哈" />


    <ImageButton
        android:id="@+id/rightImage"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:visibility="visible"
        tools:src="@mipmap/ic_arrow_right" />

    <TextView
        android:id="@+id/rightText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/clickable_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="@dimen/normal_32dp"
        android:paddingRight="@dimen/normal_32dp"
        android:textColor="@color/app_txt_color"
        android:textSize="@dimen/title_button_text_size"
        android:visibility="gone"
        tools:text="哈哈哈" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_1dp"
        android:layout_gravity="bottom"
        android:background="@color/line_color" />
</FrameLayout>