<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title_layout" />

    <include layout="@layout/include_search_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_100dp">

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_65dp"
                    android:padding="@dimen/normal_20dp"
                    android:text="@string/click_to_add_child_lock"
                    android:textColor="@color/color_D49039"
                    android:textSize="@dimen/normal_26sp" />

                <TextView
                    android:id="@+id/tv_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/normal_65dp"
                    android:padding="@dimen/normal_20dp"
                    android:text="@string/click_to_reduce_child_lock"
                    android:textColor="@color/color_D49039"
                    android:textSize="@dimen/normal_26sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/scan_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_77dp"
                android:layout_marginLeft="@dimen/normal_75dp"
                android:layout_marginTop="@dimen/normal_300dp"
                android:layout_marginRight="@dimen/normal_75dp"
                android:background="@drawable/button_oval_line_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/ic_b_scan"
                    android:drawablePadding="@dimen/normal_12dp"
                    android:text="@string/scan_code_to_add_sub_lock"
                    android:textColor="@color/color_3B74F0"
                    android:textSize="@dimen/normal_34sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_77dp"
                android:layout_marginLeft="@dimen/normal_75dp"
                android:layout_marginTop="@dimen/normal_30dp"
                android:layout_marginRight="@dimen/normal_75dp"
                android:layout_marginBottom="@dimen/normal_50dp"
                android:background="@drawable/button_oval_bg"
                android:gravity="center"
                android:text="@string/configuration"
                android:textColor="@color/color_white"
                android:textSize="@dimen/normal_34sp" />

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/normal_50dp"
                android:drawablePadding="@dimen/normal_12dp"
                android:text="@string/check_the_child_lock_list"
                android:textColor="@color/color_3B74F0"
                android:textSize="@dimen/normal_34sp"
                android:visibility="invisible" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>