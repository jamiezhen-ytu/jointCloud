<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_92dp">


    <TextView
        android:id="@+id/tv_one"
        android:layout_width="@dimen/normal_0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/normal_10dp"
        android:layout_marginBottom="@dimen/normal_6dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/box_lock_icon"
        android:drawablePadding="@dimen/normal_6dp"
        android:gravity="center"
        android:text="@string/unlock"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_22sp" />

    <View
        android:layout_width="@dimen/normal_1dp"
        android:layout_height="@dimen/normal_60dp"
        android:layout_gravity="center_vertical"
        android:background="@color/color_DDDDDD" />

    <TextView
        android:id="@+id/tv_two"
        android:layout_width="@dimen/normal_0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/normal_10dp"
        android:layout_marginBottom="@dimen/normal_6dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/box_temperature_icon"
        android:drawablePadding="@dimen/normal_6dp"
        android:gravity="center"
        android:text="@string/temperature_and_humidity_curve"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_22sp"
        android:visibility="visible"
        />


    <View
        android:layout_width="@dimen/normal_1dp"
        android:layout_height="@dimen/normal_60dp"
        android:layout_gravity="center_vertical"
        android:background="@color/color_DDDDDD" />

    <TextView
        android:id="@+id/tv_three"
        android:layout_width="@dimen/normal_0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/normal_10dp"
        android:layout_marginBottom="@dimen/normal_6dp"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_kssq"
        android:drawablePadding="@dimen/normal_6dp"
        android:gravity="center"
        android:text="@string/unlock_authorization"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_22sp" />


</LinearLayout>