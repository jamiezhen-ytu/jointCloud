<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/ic_l_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_node"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/normal_65dp"
        android:layout_marginRight="@dimen/normal_28dp"
        android:layout_marginBottom="@dimen/normal_64dp"
        android:drawableTop="@mipmap/ic_login_ip_icon"
        android:drawablePadding="@dimen/normal_12dp"
        android:text="@string/configure_server_node"
        android:textColor="@color/color_white"
        android:textSize="@dimen/normal_24sp"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_310dp"
        android:layout_marginLeft="@dimen/normal_80dp"
        android:layout_marginTop="@dimen/normal_260dp"
        android:layout_marginRight="@dimen/normal_80dp"
        android:background="@drawable/shape_white_transparent_20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_100dp">

            <EditText
                android:id="@+id/et_account"
                android:layout_width="@dimen/normal_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_28dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_account"
                android:drawablePadding="@dimen/normal_48dp"
                android:hint="@string/please_input_account"
                android:inputType="text"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textSize="@dimen/normal_24sp"
                android:text="test"/>

            <ImageView
                android:id="@+id/img_a_close"
                android:layout_width="@dimen/normal_34dp"
                android:layout_height="@dimen/normal_34dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/normal_52dp"
                android:src="@mipmap/ic_close" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_1dp"
            android:layout_marginLeft="@dimen/normal_28dp"
            android:layout_marginRight="@dimen/normal_28dp"
            android:background="@color/color_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_100dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="@dimen/normal_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_28dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/ic_passowrd"
                android:drawablePadding="@dimen/normal_48dp"
                android:hint="@string/please_input_password"
                android:inputType="textPassword"
                android:textColor="@color/color_white"
                android:textColorHint="@color/color_white"
                android:textSize="@dimen/normal_24sp"
                android:text="111111"/>

            <ImageView
                android:id="@+id/img_p_close"
                android:layout_width="@dimen/normal_34dp"
                android:layout_height="@dimen/normal_34dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/normal_52dp"
                android:src="@mipmap/ic_close" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_1dp"
            android:layout_marginLeft="@dimen/normal_28dp"
            android:layout_marginRight="@dimen/normal_28dp"
            android:background="@color/color_white" />


        <CheckBox
            android:id="@+id/cb_remeber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/normal_28dp"
            android:button="@drawable/selector_checkbox_bg"
            android:paddingLeft="@dimen/normal_24dp"
            android:text="@string/remember_account_and_password"
            android:textColor="@color/color_white"
            android:textSize="@dimen/normal_24sp"
            android:checked="false"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_90dp"
        android:layout_marginLeft="@dimen/normal_80dp"
        android:layout_marginTop="@dimen/normal_130dp"
        android:layout_marginRight="@dimen/normal_80dp"
        android:background="@drawable/shape_white_transparent_bg_20"
        android:text="@string/login"
        android:textColor="@color/color_white"
        android:textSize="@dimen/normal_34sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/normal_64dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/normal_24sp"
        tools:text="@string/version_number" />
</LinearLayout>
