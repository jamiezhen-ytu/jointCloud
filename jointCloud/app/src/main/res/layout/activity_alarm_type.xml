<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <!--  <include layout="@layout/include_title_layout"/>-->
    <LinearLayout
        android:id="@+id/layout_serarch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_80dp"
        android:background="@color/color_376DE2"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@mipmap/ic_arrow_left"
          android:layout_marginLeft="@dimen/normal_30dp"
          android:layout_gravity="center"
      />


        <EditText
            android:id="@+id/et_value"
            android:layout_width="@dimen/normal_600dp"
            android:layout_height="@dimen/normal_60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:layout_marginRight="@dimen/normal_30dp"
            android:background="@drawable/shape_white_transparent_bg_20"
            android:drawablePadding="@dimen/normal_12dp"
            android:hint="@string/please_enter_key_words"
            android:paddingLeft="@dimen/normal_17dp"
            android:textColor="@color/color_white"
            android:textColorHint="@color/color_white"
            android:textSize="@dimen/normal_26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/normal_10dp"
        >
        <CheckBox
            android:id="@+id/ck_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_quanxuan"
            android:layout_weight="5"
            android:text="@string/select_all"
            />

        <TextView
            android:id="@+id/re_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/re_select"
            android:layout_weight="1"
            android:background="@drawable/textview_circle_normal"
            android:textColor="@android:color/holo_blue_light"
            />

        <TextView
            android:id="@+id/complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:gravity="center"
            android:text="@string/complete"
            android:background="@drawable/textview_circle_normal"
            android:textColor="@android:color/holo_blue_light"
            />

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
