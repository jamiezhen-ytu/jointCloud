<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title_layout" />


    <include layout="@layout/include_search_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/normal_60dp"
                android:src="@mipmap/ic_position_tem" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_90dp"
                android:layout_marginBottom="@dimen/normal_120dp">

                <TextView
                    android:id="@+id/tv_syn"
                    android:layout_width="@dimen/normal_280dp"
                    android:layout_height="@dimen/normal_77dp"
                    android:layout_marginLeft="@dimen/normal_60dp"
                    android:background="@drawable/button_oval_line_bg"
                    android:gravity="center"
                    android:text="@string/synchronize"
                    android:textColor="@color/color_4373E6"
                    android:textSize="@dimen/normal_34sp" />

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="@dimen/normal_280dp"
                    android:layout_height="@dimen/normal_77dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/normal_60dp"
                    android:background="@drawable/button_oval_bg"
                    android:gravity="center"
                    android:text="@string/save_configuration"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/normal_34sp" />

            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>