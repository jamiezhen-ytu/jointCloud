<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_20dp"
        android:layout_marginRight="@dimen/normal_20dp"
        android:layout_marginTop="@dimen/normal_10dp"
        android:background="@drawable/shape_white_10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_68dp">

           <!-- <TextView
                android:id="@+id/tv_num"
                android:layout_width="@dimen/normal_68dp"
                android:layout_height="@dimen/normal_33dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_right_16"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/normal_26sp"
                tools:text="701" />
-->

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/normal_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_12dp"
                android:layout_weight="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/normal_28sp"
                tools:text="部标机9109190" />

           <!-- <TexView
                android:id="@+id/tv_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/normal_40dp"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:drawablePadding="@dimen/normal_50dp"
                android:gravity="center"
                android:textColor="@color/color_E69D1E"
                android:textSize="@dimen/normal_22sp"
                tools:text="进行中" />-->
            <ImageView
                android:id="@+id/tv_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/normal_40dp"
                android:layout_marginTop="@dimen/normal_10dp"
                android:gravity="center"
                android:src="@mipmap/alarm2"
                android:textSize="@dimen/normal_22sp"

                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_1dp"
            android:background="@color/color_DDDDDD" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_144dp">


            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_50dp"
                android:layout_marginBottom="@dimen/normal_20dp"
                android:textColor="#FF0000"
                android:textSize="@dimen/normal_24sp"

                app:layout_constraintBottom_toTopOf="@+id/view_base"
                app:layout_constraintLeft_toLeftOf="@+id/view_base"
                tools:text="疲劳驾驶" />
            <View
                android:id="@+id/view_base"
                android:layout_width="@dimen/normal_240dp"
                android:layout_height="@dimen/normal_1dp"
                android:layout_marginLeft="@dimen/normal_0dp"
                android:background="@color/color_E6E6E6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_10dp"
                android:layout_marginRight="@dimen/normal_40dp"
                android:layout_marginBottom="@dimen/normal_30dp"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal_24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_one"
                tools:text="2020-12-12  08:55:23" />

            <View
                android:id="@+id/view_row"
                android:layout_width="@dimen/normal_1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_240dp"
                android:background="@color/color_E6E6E6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_start_location"
                android:layout_width="@dimen/normal_420dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_16dp"
                android:maxLines="2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/normal_24sp"
                app:layout_constraintBottom_toBottomOf="@+id/view_five"
                app:layout_constraintLeft_toRightOf="@+id/view_row"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                tools:text="广东省深圳市南山区西丽街道西丽小学,宝安区凤凰社区" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</LinearLayout>