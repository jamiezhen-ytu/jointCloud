<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_85dp"
    android:background="@color/color_white">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/normal_60dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_26sp"
        tools:text="司机姓名" />

    <EditText
        android:id="@+id/et_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_55dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="@dimen/normal_30dp"
        android:layout_marginRight="@dimen/normal_60dp"
        android:background="@drawable/shape_frame_2dp"
        android:gravity="center_vertical"
        android:hint="@string/please_enter"
        android:paddingLeft="@dimen/normal_22dp"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/normal_26sp" />
</LinearLayout>