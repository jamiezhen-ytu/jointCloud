<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_56dp"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/normal_20dp"
        android:layout_weight="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_24sp"
        tools:text="部标机[E014521485]" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_20dp"
        android:layout_marginRight="@dimen/normal_20dp"
        android:background="@drawable/shape_white_10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_68dp"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_20dp"
                android:layout_weight="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/normal_24sp"
                tools:text="部标机[E014521485]" />


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_6dp"
                android:layout_marginRight="@dimen/normal_40dp"
                android:drawablePadding="@dimen/normal_50dp"
                android:gravity="center"
                android:textColor="@color/color_3B74F0"
                android:textSize="@dimen/normal_24sp"
                tools:text="E014521485" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_1dp"
            android:background="@color/color_DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_68dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_20dp"
                android:text="@string/progress_mileage"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/normal_24sp" />

            <TextView
                android:id="@+id/tv_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/normal_40dp"
                android:layout_weight="1"
                android:drawablePadding="@dimen/normal_50dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/normal_24sp"
                tools:text="120km" />

            <TextView
                android:id="@+id/tv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/normal_30dp"
                android:drawablePadding="@dimen/normal_50dp"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/normal_24sp"
                tools:text="张红"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/normal_30dp"
                android:layout_height="@dimen/normal_34dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/normal_10dp"
                tools:src="@mipmap/lock_remote_icon"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_1dp"
            android:background="@color/color_DDDDDD" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_100dp"
            android:paddingTop="@dimen/normal_0dp"
            android:paddingRight="@dimen/normal_24dp">


            <View
                android:id="@+id/view_point"
                android:layout_width="@dimen/normal_14dp"
                android:layout_height="@dimen/normal_14dp"
                android:layout_marginLeft="@dimen/normal_20dp"
                android:layout_marginTop="@dimen/normal_30dp"
                android:background="@color/color_F56969"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_16dp"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal_24sp"
                app:layout_constraintBottom_toBottomOf="@+id/view_point"
                app:layout_constraintLeft_toRightOf="@+id/view_point"
                app:layout_constraintTop_toTopOf="@+id/view_point"
                tools:text="08:55:23" />

            <TextView
                android:id="@+id/lock_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unlock"
                app:layout_constraintTop_toBottomOf="@+id/view_point"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/normal_60dp"
                android:layout_marginTop="@dimen/normal_10dp"
                android:textSize="@dimen/normal_20sp"
                android:textColor="@color/color_222222"
                />

            <View
                android:id="@+id/view_01"
                android:layout_width="@dimen/normal_2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_164dp"
                android:background="@color/color_E6E6E6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_location"
                android:layout_width="@dimen/normal_480sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_16dp"
                android:maxLines="2"
                android:inputType ="textMultiLine"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal_24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/view_01"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="广东省深圳市宝安区留仙二路庭威工业园二栋三楼" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <View
        android:id="@+id/tv_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_18dp"
        android:background="@color/color_F5F5F5"
        />
</LinearLayout>