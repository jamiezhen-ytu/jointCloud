<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_58dp"
        android:background="@color/color_DDDDDD"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/normal_30dp"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_26sp"
        tools:text="2020-08-16 报警详情"
        android:visibility="visible"
        />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_20dp"
        android:background="@color/color_F5F5F5"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_20dp"
        android:layout_marginRight="@dimen/normal_20dp"
        android:background="@drawable/shape_white_10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_68dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/normal_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_20dp"
                android:layout_weight="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/normal_24sp"
                tools:text="部标机" />

            <TextView
                android:id="@+id/tv_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/normal_40dp"
                android:drawablePadding="@dimen/normal_50dp"
                android:gravity="center"
                android:textColor="@color/color_E69D1E"
                android:textSize="@dimen/normal_24sp"
                tools:text="进行中" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_1dp"
            android:background="@color/color_DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_68dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_20dp"
                android:text="@string/mileage"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/normal_24sp" />

            <TextView
                android:id="@+id/tv_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/normal_40dp"
                android:drawablePadding="@dimen/normal_50dp"
                android:gravity="center"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/normal_24sp"
                tools:text="120km" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_1dp"
            android:background="@color/color_DDDDDD" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_144dp">

            <View
                android:id="@+id/view_line"
                android:layout_width="@dimen/normal_2dp"
                android:layout_height="@dimen/normal_76dp"
                android:layout_marginLeft="@dimen/normal_26dp"
                android:background="@color/color_CCCCCC"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_one"
                android:layout_width="@dimen/normal_14dp"
                android:layout_height="@dimen/normal_14dp"
                android:background="@drawable/shape_oval_green"
                app:layout_constraintBottom_toTopOf="@+id/view_line"
                app:layout_constraintLeft_toLeftOf="@+id/view_line"
                app:layout_constraintRight_toRightOf="@+id/view_line" />

            <View
                android:id="@+id/view_two"
                android:layout_width="@dimen/normal_14dp"
                android:layout_height="@dimen/normal_14dp"
                android:background="@drawable/shape_oval_yellow"
                app:layout_constraintBottom_toBottomOf="@+id/view_line"
                app:layout_constraintLeft_toLeftOf="@+id/view_line"
                app:layout_constraintRight_toRightOf="@+id/view_line"
                app:layout_constraintTop_toTopOf="@+id/view_line" />

            <View
                android:id="@+id/view_three"
                android:layout_width="@dimen/normal_14dp"
                android:layout_height="@dimen/normal_14dp"
                android:background="@drawable/shape_oval_red"
                app:layout_constraintLeft_toLeftOf="@+id/view_line"
                app:layout_constraintRight_toRightOf="@+id/view_line"
                app:layout_constraintTop_toBottomOf="@+id/view_line" />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_16dp"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal_24sp"
                app:layout_constraintBottom_toBottomOf="@+id/view_one"
                app:layout_constraintLeft_toRightOf="@+id/view_one"
                app:layout_constraintTop_toTopOf="@+id/view_one"
                tools:text="05:55:23" />

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_16dp"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal_24sp"
                app:layout_constraintBottom_toBottomOf="@+id/view_two"
                app:layout_constraintLeft_toRightOf="@+id/view_two"
                app:layout_constraintTop_toTopOf="@+id/view_two"
                tools:text="3小时" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_16dp"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal_24sp"
                app:layout_constraintBottom_toBottomOf="@+id/view_three"
                app:layout_constraintLeft_toRightOf="@+id/view_three"
                app:layout_constraintTop_toTopOf="@+id/view_three"
                tools:text="08:55:23" />

            <View
                android:id="@+id/view_four"
                android:layout_width="@dimen/normal_2dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normal_164dp"
                android:background="@color/color_E6E6E6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_five"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_1dp"
                android:layout_marginLeft="@dimen/normal_164dp"
                android:background="@color/color_E6E6E6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/view_four"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_start_location"
                android:layout_width="@dimen/normal_520dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_16dp"
                android:maxLines="2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/normal_24sp"
                app:layout_constraintBottom_toBottomOf="@+id/view_five"
                app:layout_constraintLeft_toRightOf="@+id/view_four"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="广东省深圳市南山区西丽街道西丽小学" />

            <TextView
                android:id="@+id/tv_end_location"
                android:layout_width="@dimen/normal_520dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_16dp"
                android:maxLines="2"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/normal_24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/view_four"
                app:layout_constraintTop_toTopOf="@+id/view_five"
                tools:text="广东省深圳市宝安区留仙二路庭威工业园二栋三楼" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_10dp"
        android:background="@color/color_F5F5F5"
         />
</LinearLayout>