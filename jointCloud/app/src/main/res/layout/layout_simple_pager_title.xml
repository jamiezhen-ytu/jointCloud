<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_100dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_offline"
        android:layout_width="@dimen/normal_0dp"
        android:layout_height="@dimen/normal_60dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/normal_42dp"
            android:layout_height="@dimen/normal_42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/normal_18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/home_status_all" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/normal_12dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/normal_22sp"
            app:layout_constraintLeft_toRightOf="@+id/img_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="全部" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/normal_12dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/normal_22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_icon"
            tools:text="2900" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="@dimen/normal_1dp"
        android:layout_height="@dimen/normal_20dp"
        android:layout_gravity="right|center_vertical"
        android:background="@color/color_white"
        android:layout_marginLeft="@dimen/normal_12dp"/>
</LinearLayout>