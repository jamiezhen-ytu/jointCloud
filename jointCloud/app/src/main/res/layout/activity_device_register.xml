<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_title_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"

        >

        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_60dp"
            android:gravity="center_vertical"

            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="设备ID" />

        <EditText
            android:id="@+id/et_device_id"
            android:layout_width="@dimen/normal_350dp"
            android:layout_height="@dimen/normal_55dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:layout_marginRight="@dimen/normal_100dp"
            android:background="@drawable/shape_frame_2dp"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:paddingLeft="@dimen/normal_22dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_device_id"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/search_driver_t"
            app:layout_constraintBottom_toBottomOf="@+id/tv_device_id"
            />

        <ImageView
            android:id="@+id/search_driver_t"
            android:layout_width="@dimen/normal_50dp"
            android:layout_height="@dimen/normal_50dp"
            android:layout_marginRight="@dimen/normal_60dp"
            android:background="@color/blue"
            android:padding="@dimen/normal_10dp"
            android:gravity="left|center"
            android:src="@mipmap/ic_c_scan"
            android:layout_marginTop="@dimen/normal_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/et_device_id"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        >

        <TextView
            android:id="@+id/tv_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_60dp"
            android:gravity="center_vertical"

            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="设备类型" />

        <EditText
            android:id="@+id/et_device_type"
            android:layout_width="@dimen/normal_450dp"
            android:layout_height="@dimen/normal_55dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:layout_marginRight="@dimen/normal_60dp"
            android:background="@drawable/shape_frame_2dp"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:paddingLeft="@dimen/normal_22dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_device_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_device_type"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"

        >

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_60dp"
            android:gravity="center_vertical"

            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="关联公司" />

        <EditText
            android:id="@+id/et_company"
            android:layout_width="@dimen/normal_450dp"
            android:layout_height="@dimen/normal_55dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:layout_marginRight="@dimen/normal_60dp"
            android:background="@drawable/shape_frame_2dp"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:paddingLeft="@dimen/normal_22dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_company"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_company"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"

        >

        <TextView
            android:id="@+id/tv_bind_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_60dp"
            android:gravity="center_vertical"

            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="绑定车箱" />

        <EditText
            android:id="@+id/et_carrige"
            android:layout_width="@dimen/normal_450dp"
            android:layout_height="@dimen/normal_55dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:layout_marginRight="@dimen/normal_60dp"
            android:background="@drawable/shape_frame_2dp"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:paddingLeft="@dimen/normal_22dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_bind_car"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bind_car"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"

        >

        <TextView
            android:id="@+id/tv_sim_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_60dp"
            android:gravity="center_vertical"

            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="SIM卡" />

        <EditText
            android:id="@+id/et_sim_card"
            android:layout_width="@dimen/normal_450dp"
            android:layout_height="@dimen/normal_55dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:layout_marginRight="@dimen/normal_60dp"
            android:background="@drawable/shape_frame_2dp"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:paddingLeft="@dimen/normal_22dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_sim_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sim_card"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"

        >

        <TextView
            android:id="@+id/tv_imei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_60dp"
            android:gravity="center_vertical"

            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="IMEI号" />

        <EditText
            android:id="@+id/et_imei"
            android:layout_width="@dimen/normal_450dp"
            android:layout_height="@dimen/normal_55dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:layout_marginRight="@dimen/normal_60dp"
            android:background="@drawable/shape_frame_2dp"
            android:gravity="center_vertical"
            android:hint="@string/please_enter"
            android:paddingLeft="@dimen/normal_22dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_imei"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_imei"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"

        >

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_60dp"
            android:gravity="center_vertical"

            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="描述" />

        <EditText
            android:id="@+id/et_desprition"
            android:layout_width="@dimen/normal_450dp"
            android:layout_height="@dimen/normal_250dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/normal_30dp"
            android:layout_marginRight="@dimen/normal_60dp"
            android:background="@drawable/shape_frame_2dp"
            android:gravity="center_vertical"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="8"
            android:paddingLeft="@dimen/normal_22dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/normal_26sp"
            android:layout_marginTop="@dimen/normal_30dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_60dp"
        android:layout_marginLeft="@dimen/normal_30dp"
        android:layout_marginRight="@dimen/normal_30dp"
        android:background="@drawable/textview_circle_bluel"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派发"
            android:textColor="@color/white"
            />



    </LinearLayout>

</LinearLayout>
