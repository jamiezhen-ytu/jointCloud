<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/normal_80dp"
        android:layout_height="@dimen/normal_80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/normal_30dp"
        android:background="@mipmap/home_function_icon3" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/normal_18dp"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/normal_24sp"
        tools:text="车/箱信息" />
</LinearLayout>