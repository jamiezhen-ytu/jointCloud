<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_138dp"
    android:background="@drawable/shape_white_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/normal_80dp"
        android:layout_height="@dimen/normal_80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/normal_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@mipmap/home_function_icon3" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/normal_30dp"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/normal_26sp"
        app:layout_constraintLeft_toRightOf="@+id/img_icon"
        app:layout_constraintTop_toTopOf="@+id/img_icon"
        tools:text="全部" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/normal_30dp"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/normal_26sp"
        app:layout_constraintLeft_toRightOf="@+id/img_icon"
        app:layout_constraintBottom_toBottomOf="@+id/img_icon"
        tools:text="2900" />
</androidx.constraintlayout.widget.ConstraintLayout>