<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_btn"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_60dp"
    android:paddingLeft="@dimen/normal_40dp"
    android:paddingRight="@dimen/normal_40dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <View
            android:layout_width="@dimen/normal_15dp"
            android:layout_height="@dimen/normal_15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_oval_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:drawablePadding="@dimen/normal_12dp"
            android:gravity="center"
            android:text="@string/start_time"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/normal_22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <View
            android:layout_width="@dimen/normal_15dp"
            android:layout_height="@dimen/normal_15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_oval_yellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:drawablePadding="@dimen/normal_12dp"
            android:gravity="center"
            android:text="@string/duration_time"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/normal_22sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right">

        <View
            android:layout_width="@dimen/normal_15dp"
            android:layout_height="@dimen/normal_15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_oval_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:drawablePadding="@dimen/normal_12dp"
            android:gravity="center"
            android:text="@string/end_time"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/normal_22sp" />
    </LinearLayout>



</FrameLayout>