<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/normal_160dp"
    android:layout_height="@dimen/normal_160dp"
    android:background="@drawable/shape_white_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_show"
        android:layout_width="@dimen/normal_80dp"
        android:layout_height="@dimen/normal_80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/normal_10dp"
        android:src="@mipmap/ic_disable" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/normal_16dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_20sp"
        tools:text="不支持该操作" />

</LinearLayout>