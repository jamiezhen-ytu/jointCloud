<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_10"
    android:layout_marginLeft="@dimen/normal_20dp"
    android:layout_marginRight="@dimen/normal_20dp"
    android:layout_marginTop="@dimen/normal_20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_60dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="@dimen/normal_88dp"
            android:layout_height="@dimen/normal_33dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_right_16"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/normal_20sp"
            tools:text="部标机" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/normal_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_12dp"
            android:layout_weight="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_28sp"
            tools:text="部标机" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_1dp"
        android:layout_marginLeft="@dimen/normal_20dp"
        android:layout_marginRight="@dimen/normal_20dp"
        android:background="@color/color_DDDDDD" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/normal_40dp"
        android:paddingRight="@dimen/normal_28dp"
        android:paddingTop="@dimen/normal_10dp"
        android:paddingBottom="@dimen/normal_20dp">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_12dp"
            android:layout_marginTop="@dimen/normal_10dp"
            android:drawablePadding="@dimen/normal_12dp"
            android:lineSpacingExtra="@dimen/normal_20dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/pw_lock_info" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_24dp"
            android:layout_marginTop="@dimen/normal_10dp"
            android:drawablePadding="@dimen/normal_12dp"
            android:lineSpacingExtra="@dimen/normal_20dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/normal_24sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="久通软件测试\n888888\n123456" />

        <ImageView
            android:id="@+id/img_modify"
            android:layout_width="@dimen/normal_33dp"
            android:layout_height="@dimen/normal_33dp"
            android:layout_marginTop="@dimen/normal_45dp"
            android:src="@mipmap/lock_edit_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img_switch"
            android:layout_width="@dimen/normal_60dp"
            android:layout_height="@dimen/normal_34dp"
            android:src="@drawable/selector_switch_bg"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>