<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/normal_12dp"
    android:paddingRight="@dimen/normal_12dp">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/normal_60dp"
        android:layout_height="@dimen/normal_60dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_recharge" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/normal_5dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_20sp"
        android:layout_marginLeft="@dimen/normal_12dp"
        android:layout_marginRight="@dimen/normal_12dp"
        tools:text="100%" />

</LinearLayout>